{
  "name": "n8n-nodes-image-aspect-ratio-cropper",
  "version": "1.0.0",
  "description": "n8n community node for cropping images to exact aspect ratios using center-cover mode. Supports 10 common aspect ratios including 1:1, 16:9, 9:16, 4:3, 3:4, and more.",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "n8n-nodes",
    "image",
    "crop",
    "aspect",
    "ratio",
    "aspect-ratio",
    "resize",
    "cover",
    "center-crop",
    "cropper",
    "editor",
    "automation"
  ],
  "license": "MIT",
  "homepage": "https://github.com/LinkAIBrain/n8n-nodes-image-aspect-ratio-cropper",
  "author": {
    "name": "LinkAIBrain",
    "email": "linkaibrain@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LinkAIBrain/n8n-nodes-image-aspect-ratio-cropper.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && gulp build:assets",
    "dev": "tsc --watch",
    "format": "prettier nodes --write",
    "lint": "eslint nodes --ext .ts",
    "lint:fix": "eslint nodes --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/ImageAspectRatioCropper/ImageAspectRatioCropper.node.js"
    ],
    "credentials": []
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "^1.20.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "sharp": "^0.33.0"
  }
}

